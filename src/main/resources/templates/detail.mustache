{{>layout/header}}
<div class="xans-element- xans-product xans-product-detail">
    <div class = "detailArea">
        <div class="xans-element- xans-product xans-product-image imgArea">
            <div id ="prdDetail">
                <div id="prddetailimg">
                    <p style="text-align: center;">
                        <img alt="" style="font-size: 9pt;" src="https://youthtory.kr/web/upload/NNEditor/20200602/IMG_9270_shop1_161233.jpg">
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="detail-right" style="bottom: inherit; top=0px;">
    <div id="detailinfo">
        <div class ="infoArea">
            <div style="padding-bottom:15px" class="xans-element- xans-product xans-product-detaildesign"><!--
                    출력 갯수 지정 변수, 없으면 설정된 전체가 나옵니다.
                    count = 10
                -->
                <table border="1" summary="">
                    <tbody>
                    <tr class=" xans-record-">
                        <th scope="row">
                            <span style="font-size:12px;color:#000000;">상품명</span>
                        </th>
                        <td style="padding-bottom:8px">
                            <span style="font-size:12px;color:#000000;">Natural Linen Jacket</span>
                        </td>
                    </tr>
                    <tr class=" xans-record-">
                        <th scope="row">
                            <span style="font-size:15px;color:#000000;font-weight:bold;">판매가</span>
                        </th>
                        <td><span style="font-size:15px;color:#000000;font-weight:bold;">
	<strong id="span_product_price_text">66,000원</strong>
	<input id="product_price" name="product_price" value="" type="hidden">
</span>
                        </td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<div class="option_bx">
    <ruler-numcoutbx _ngcontent-c35="" _nghost-c65="" class="ng-untouched ng-valid ng-dirty">
		<span _ngcontent-c65="" class="numcoutbx">
    	<button _ngcontent-c65="" type="button">-</button>
			<input _ngcontent-c65="" type="number" class="ng-untouched ng-pristine ng-valid">
			<button _ngcontent-c65="" type="button">+</button>
		</span>
    </ruler-numcoutbx>
</div>
